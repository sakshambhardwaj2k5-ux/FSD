import React from "react";

// ProductCard Component
function ProductCard({ name, price, inStock }) {
  return (
    <div className="border rounded-lg shadow-md p-4 w-64 bg-white">
      <h2 className="text-lg font-bold mb-2">{name}</h2>
      <p className="text-gray-700 mb-1">Price: ${price}</p>
      <p className={inStock ? "text-green-600" : "text-red-600"}>
        {inStock ? "✅ In Stock" : "❌ Out of Stock"}
      </p>
      <button
        disabled={!inStock}
        className={`mt-3 px-4 py-2 rounded text-white ${
          inStock
            ? "bg-blue-600 hover:bg-blue-700"
            : "bg-gray-400 cursor-not-allowed"
        }`}
      >
        Buy Now
      </button>
    </div>
  );
}

// App Component
export default function App() {
  const products = [
    { id: 1, name: "Wireless Headphones", price: 99.99, inStock: true },
    { id: 2, name: "Mechanical Keyboard", price: 149.5, inStock: false },
    { id: 3, name: "Gaming Mouse", price: 59.0, inStock: true },
  ];

  return (
    <div className="p-6 grid grid-cols-1 md:grid-cols-3 gap-4">
      {products.map((product) => (
        <ProductCard
          key={product.id}
          name={product.name}
          price={product.price}
          inStock={product.inStock}
        />
      ))}
    </div>
  );
}
